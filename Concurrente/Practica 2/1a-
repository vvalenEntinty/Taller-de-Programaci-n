a)
programa Practica2_Ejercicio1
procesos
  proceso juntarFlor(ES cantFlores:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cantFlores:=cantFlores+1
  fin
  proceso Recorrer(ES cantFlores:numero)
  comenzar
    cantFlores:=0
    repetir 9
      juntarFlor(cantFlores)
      mover
    juntarFlor(cantFlores) 
  fin

areas
  area1:AreaP(1,1,1,10)
  area2:AreaP(2,11,2,20)
robots
  robot robot1
  variables 
    cantFlores1:numero
    ok:boolean
    dif:numero
  comenzar
    Recorrer(cantFlores1)
    EnviarMensaje(cantFlores1,bot2)
    RecibirMensaje(ok,bot2)
    si(ok = V)
      RecibirMensaje(dif,bot2)
      Informar(dif)
  fin
  robot robot2
  variables
    cantFlores2:numero
    cantFlores1:numero
    diferencia:numero
  comenzar
    Recorrer(cantFlores2)
    RecibirMensaje(cantFlores1,bot1)  
    diferencia:=(cantFlores1-cantFlores2)
    si(diferencia>0)
      EnviarMensaje(V,bot1)
      EnviarMensaje(diferencia,bot1)
    sino
      Informar(cantFlores2-cantFlores1)
      EnviarMensaje(F,bot1)
  fin
variables
  bot1:robot1
  bot2:robot2
comenzar
  AsignarArea(bot1,area1)
  AsignarArea(bot2,area2)
  Iniciar(bot1,1,1)
  Iniciar(bot2,2,11)
fin

